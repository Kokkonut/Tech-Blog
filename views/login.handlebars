<div id="login-modal">
  <h3>Login</h3>
  <div class="modal-content">
    <form id="login-form" class="center-align"  action="/api/users/login" method="post">
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="login_username" type="text" name="username" class="validate" required>
          <label for="username">Username</label>
          <span class="helper-text" data-error="Please enter a valid username" data-success=""></span>
        </div>
      </div>
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="login_password" type="password" name="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please enter a valid password" data-success=""></span>
        </div>
      </div>
      <div class="row">
        <div class="col s12 center-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
        </div>
      </div>
    </form>
    <p>Don't have an account? <a href="/signup">Sign up</a></p>
  </div>
</div>

<script src="./js/login.js"></script>


