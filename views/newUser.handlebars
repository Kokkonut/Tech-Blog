<div>
  <h3>Signup</h3>
  <div>
    <form action="/api/users/signup" method="post">
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="signup_username" name="signup_username" type="text" class="validate" required />
          <label for="username">Username</label>
          <span class="helper-text" data-error="Please enter a valid username" data-success=""></span>
        </div>
      </div>
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="signup_password" name="signup_password" type="password" class="validate" required />
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please enter a valid password" data-success=""></span>
        </div>
      </div>
      <div class="row">
        <div class="col s12 center-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
        </div>
      </div>
    </form>

  </div>
</div>

<!-- Modal Trigger -->
{{! <a class="waves-effect waves-light btn modal-trigger" href="#error-modal">Modal</a> }}

<!-- Modal Structure -->
<div id="error-modal" class="modal">
  <div class="modal-content">
    <h4>Error</h4>
    <p id="error-message"></p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>

<script src="./js/signup.js"></script>