<!-- login Modal Structure -->
<div id="login-modal" class="modal center-align">
  <h3>Login</h3>
  <div class="modal-content">
    <form class="center-align" onsubmit="return validateForm('login')">
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="login-username" type="text" class="validate" required>
          <label for="username">Username</label>
          <span class="helper-text" data-error="Please enter a valid username" data-success=""></span>
        </div>
      </div>
      <div class="row center-align">
        <div class="input-field col s6 center-align">
          <input id="login-password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please enter a valid password" data-success=""></span>
        </div>
      </div>
      <div class="row">
        <div class="col s12 center-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
        </div>
      </div>
    </form>
    <p>Don't have an account? <a href="#signup-modal" class="modal-trigger">Sign up</a></p>
  </div>
</div>

